strategy("Estrategia de medias Moviles", overlay = true)
sma50 = ta.sma(close,50)
sma200 = ta.sma(close,200)
buy_cond = ta.crossover(sma50,sma200)
sell_cond = ta.crossunder(sma50,sma200)
strategy.entry("Buy", strategy.long, when=buy_cond)
strategy.entry("Sell", strategy.short, when=sell_cond)
plot(sma50,color=color.blue, title="SMA 50")
plot(sma200,color=color.white, title="SMA 200")